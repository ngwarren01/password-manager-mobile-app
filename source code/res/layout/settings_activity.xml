            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#c1c1c1"
                android:padding="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:padding="10dp"
                    android:text="Features"
                    android:textColor="#DE3163"
                    android:textSize="25dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins"
                            android:paddingStart="30dp"
                            android:paddingTop="20dp"
                            android:paddingEnd="100dp"
                            android:paddingBottom="20dp"
                            android:text="Use dark theme"
                            android:textSize="@dimen/text_medium_size" />

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/ask_dark_theme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:fontFamily="@font/capriola"
                            android:paddingStart="30dp"
                            android:paddingTop="20dp"
                            android:paddingEnd="5dp"
                            android:paddingBottom="20dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/change_master_password"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins"
                            android:onClick="changePassword"
                            android:paddingStart="30dp"
                            android:paddingTop="20dp"
                            android:paddingEnd="30dp"
                            android:paddingBottom="20dp"
                            android:text="@string/change_master_password"
                            android:textSize="@dimen/text_medium_size" />

                        <TextView
                            android:id="@+id/change_master_password_option_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/capriola"
                            android:onClick="changePasswordToPIN"
                            android:paddingStart="50dp"
                            android:paddingTop="20dp"
                            android:paddingEnd="30dp"
                            android:paddingBottom="20dp"
                            android:text="PIN"
                            android:visibility="gone" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="298dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins"
                                android:paddingStart="30dp"
                                android:paddingTop="20dp"
                                android:paddingEnd="80dp"
                                android:paddingBottom="20dp"
                                android:text="Secure Mode"
                                android:textSize="@dimen/text_medium_size" />

                            <com.google.android.material.switchmaterial.SwitchMaterial
                                android:id="@+id/secure_core_mode"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="false"
                                android:fontFamily="@font/capriola"
                                android:paddingStart="30dp"
                                android:paddingTop="20dp"
                                android:paddingEnd="5dp"
                                android:paddingBottom="20dp" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            android:fontFamily="@font/poppins"
                            android:text="Disables copies to clipboard and screenshots within the app"
                            android:textSize="13dp" />

                        <TextView
                            android:id="@+id/delete_all_data"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins"
                            android:onClick="deleteAllData"
                            android:paddingStart="30dp"
                            android:paddingTop="20dp"
                            android:paddingEnd="5dp"
                            android:paddingBottom="20dp"
                            android:text="Delete all Data"
                            android:textSize="@dimen/text_medium_size" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_bold"
                            android:padding="10dp"
                            android:text="@string/about"
                            android:textColor="#DE3163"
                            android:textSize="25dp" />

                        <TextView
                            android:id="@+id/about_app"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins"
                            android:onClick="aboutApp"
                            android:paddingStart="30dp"
                            android:paddingTop="20dp"
                            android:paddingEnd="5dp"
                            android:paddingBottom="20dp"
                            android:text="About this app"
                            android:textSize="@dimen/text_medium_size" />

                        <!--                        <TextView-->
